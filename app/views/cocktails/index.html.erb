<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/collection/3468732);">
  <div class="container">
    <h1>Cocktails</h1>
  </div>
</div>

<div class="container">
  <div class="row mt-3">
    <% @cocktails.each do |cocktail| %>
      <div class="card-category ml-2 mr-2 col-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/collection/3468732)">
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
      </div>
    <% end %>
  </div>
</div>
