  <div class="container mt-3">
    <h2>Add a dose to <%= @cocktail.name %></h2>
    <div class="row">
      <div class="col-4">
        <%= simple_form_for([@cocktail, @dose]) do |f| %>
          <%= f.association :ingredient %>
          <%= f.input :description %>
          <%= f.submit class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
